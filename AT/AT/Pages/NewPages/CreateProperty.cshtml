@page
@model AT.Pages.NewPages.CreatePropertyModel
@{
    ViewData["Title"] = "Cadastrar Proprieade";
}
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

<h2>Cadastrar Cliente</h2>

<div class="col-4">
    <form method="post" asp-page-handler="Cliente">
        <div class="mb-2">
            <label class="mt-1" for="Nome">Nome:</label>
            <input class="form-control" type="text" id="Name" asp-for="Cliente.Nome" />   
            <small class="text-danger" asp-validation-for="Cliente.Nome"></small>
        </div>
        <div class="mb-2">
            <label class="mt-1" for="Email">Email:</label>
            <input class="form-control" type="text" id="Email" asp-for="Cliente.Email"/>
        </div>
        <button class="btn btn-primary mt-2 mb-2" type="submit">Salvar Cliente</button>
    </form>
</div>

<h2>Cadastrar Destino</h2>

<div class="col-4">
    <form method="post" asp-page-handler="Destino">
        <div class="mb-2">
            <label class="mt-1" for="Nome">Nome:</label>
            <input class="form-control" type="text" asp-for="Destino.Nome" />
            <small class="text-danger" asp-validation-for="Destino.Nome"></small>
        </div>
        <div class="mb-2">
            <label class="mt-1" for="Pais">País:</label>
            <input class="form-control" type="text" asp-for="Destino.Pais" />
        </div>
        <button class="btn btn-primary mt-2" type="submit">Salvar Destino</button>
    </form>
</div>