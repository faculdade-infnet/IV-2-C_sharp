@page
@model Exercicio_05.Pages.CreateCountryModel
@{
}

<form class="form-horizontal" method="post">
    <div class="form-group">
        <label class="col-sm-2 control-label">Country Code</label>
        <div class="col-sm-10">
            <input asp-for="Input.CountryCode" type="text" class="form-control">
        </div>
    </div>
    <div class="form-group">
        <label class="col-sm-2 control-label">Country Name</label>
        <div class="col-sm-10">
            <input asp-for="Input.CountryName" type="text" class="form-control">
        </div>
    </div>
    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10 mt-2">
            <button type="submit" class="btn btn-primary">Criar</button>
        </div>
    </div>
</form>
<div></div>
<div></div>
@if (Model.Country != null)
{
    <div class="row mb3">
        <label class="col-sm-2 col-form-label col-form-label-lg">Country Code:</label>
        <div class="col-sm-10">
            <label class="form-control">@Model.Country?.CountryCode</label>
        </div>
    </div>
    <div class="row mb-3">
        <label class="col-sm-2 col-form-label col-form-label-lg">Country Name:</label>
        <div class="col-sm-10">
            <label class="form-control">@Model.Country?.CountryName</label>
        </div>
    </div>
}