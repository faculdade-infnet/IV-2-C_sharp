<form class="form-horzontal" method="post">
    <div class="form-group">
        <label for="Name" class="col-sm-2 control-label">Nome</label>
        <div class="col-sm-10">
            <input type="text" class="form-control" name="Nome"/>
        </div>
    </div>
    <div class="form-group">
