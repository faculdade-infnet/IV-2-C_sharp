@page
@using System.Globalization
@model Exercicio_08_RazorPage.Pages.ProductCatalog.AddProductModel
@{
    ViewData["Title"] = "Catálogo de Produtos";
}

<style>
    .btn-custom-blue {
        background-color: #007bff; /* Azul customizado */
        color: white;
        border: none;
        margin-top: 5px;
        margin-bottom: 5px;        
    }
    .btn-custom-blue:hover {
        background-color: #0056b3; /* Tom mais escuro quando passar o mouse */
    }
</style>

<form class="form-horzontal" method="post">
    <div class="form-group">
        <label for="Name" class="col-sm-2 control-label">Nome</label>
        <div class="col-sm-10">
            <input type="text" class="form-control" name="Nome" />
        </div>
    </div>
    <div class="form-group">
        <label for="Preco" class="col-sm-2 control-label">Preço</label>
        <div class="col-sm-10">
            <input type="text" class="form-control" name="Preco" />
        </div>
    </div>
    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
            <button type="submit" class="btn btn-custom-blue">Criar</button>
        </div>
    </div>
</form>
<div></div>
<div></div>
<div class="row mb3">
    <label class="col-sm-2 col-form-label col-form-label-lg">Nome:</label>
    <div class="col-sm-10">
        <label class="form-control">@Model.Nome</label>
    </div>
</div>
<div class="row mb3">
    <label class="col-sm-2 col-form-label col-form-label-lg">Email:</label>
    <div class="col-sm-10">
        <label class="form-control">@Model.Preco</label>
    </div>
</div>
